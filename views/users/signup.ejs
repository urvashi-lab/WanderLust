<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
<div class="col-6 offset-3"><h3>SignUp on Wanderlust</h3></div>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="Create new Username" class="form-control" type="text" required />
                <div class="invalid-feedback">Please provide correct username.</div>
                <div class="valid-feedback">
                    Looks Good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" placeholder="Enter your email Id" class="form-control" type="email" required />
                <div class="invalid-feedback">Please enter your email Id.</div>
                <div class="valid-feedback">
                    Looks Good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="Create new password" class="form-control" type="password" required />
                <div class="invalid-feedback"> Please enter Password .</div>
                <div class="valid-feedback">
                    Looks Good!
                  </div>
            </div>
            <button class="btn btn-success" type="submit">Create</button>
        </form>
</div>
</div>