<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
<div class="col-6 offset-3"><h3>Login</h3></div>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="Enter Username" class="form-control" type="text" required />
                
            </div>
           
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="Enter password" class="form-control" type="password" required />
                
            </div>
            <button class="btn btn-success" type="submit">Login</button>
        </form>
</div>
</div>