<% layout('/layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <div class="card col-6 offset-3 listing-card">
                <h2><%= showlisting.title %></h2>
                <img 
                    src="<%=showlisting.image.url%>" 
                    class="card-img-top show-img"
                    alt="listing_image">
                <div class="card-body ">
                    
                    <div class="card-text">Owned By <%= showlisting.owner.username %></div>
                    <div class="card-text"><%= showlisting.description %></div>
                    <div class="card-text">Category:<%= showlisting.category %></div>
                    <div class="card-text">&#8377;<%= showlisting.price ? showlisting.price.toLocaleString("en-IN") : "N/A" %></div>
                    <div class="card-text"><%= showlisting.location %></div>
                    <div class="card-text"><%= showlisting.country %></div>
                </div>
          <%if (currentuser && showlisting.owner._id.equals(currentuser._id)) {%>
            <div class="btns ">
                <form action="/listings/<%= showlisting._id %>/edit">
                    <button class="btn btn-dark add-btn">Edit</button>
                </form>
                <form method="POST" action="/listings/<%= showlisting._id %>?_method=DELETE" onsubmit="return confirmDelete()">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
            <%}%>
            
                   
              
                </div>
            
        </div>
    </div>
    
<hr/>
    <div class="col-8 offset-3 mb-3">
        <%if (currentuser) {%>    
        <h4>Leave a Review</h4>
        <form class="mb-3 needs-validation" action="/listings/<%= showlisting._id%>/reviews" method="POST" novalidate>
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-fade">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            <div >
    
   
</div>
<div >
    <label for="comment" class="form-label">Comments</label>
    <textarea id="comment" name="review[comment]" cols="5" rows="4" class="form-control" required></textarea>
    <div class="invalid-feedback">Please add a review.</div>
</div>
<button class="btn btn-dark mt-2">Submit</button>
        </form>
        
<hr/>
<%}%>
<% if(showlisting.reviews.length>0){%>
<h3>All reviews</h3>
<div class="row">
    <%for(let review of showlisting.reviews){%>
        <div class="card me-3 col-8 ms-1 mb-2 ">
            <div class="card-body">
                <h5 class="card-title" style="color: rgb(5, 36, 42);"><b>@<%= review.author.username %></b></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>">
                    Rated: <%= review.rating %> stars
                  </p>
                <p class="card-text"><%= review.comment %></p>
                
                
                <form method="POST" action="/listings/<%= showlisting._id%>/reviews/<%= review._id%>?_method=DELETE" class="mt-auto" onsubmit="return confirmDeleteReview()">
                    <button class="btn btn-dark btn-sm delete-btn mb-2">Delete</button>
                </form>
            </div>
            
        </div>

    <% } %>
</div>  
<%}%> 

<h3>Where You'll Be!</h3>
<div id="map" style="height: 500px;"></div>

<script>
  var map = L.map('map').setView(["<%= showlisting.coordinates.lat %>", "<%= showlisting.coordinates.lon %>"], 13);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
    attribution: 'Â© OpenStreetMap contributors'
  }).addTo(map);

  var marker = L.marker(["<%= showlisting.coordinates.lat %>", "<%= showlisting.coordinates.lon %>"]).addTo(map);

  marker.bindTooltip("<b>Exact location provided after booking</b>")
  .openTooltip();  // You can call openTooltip() if you want it to open by default

  // Optional: Customize the tooltip to appear on hover
  marker.on('mouseover', function() {
    this.openTooltip();
  });
  marker.on('mouseout', function() {
    this.closeTooltip();
  });
</script>

</div>
   
        
    

    
<script>
    
    function confirmDelete(){
        return confirm("Are you sure you want to delete this listing?This action cannot be undone.")
    }
    function confirmDeleteReview(){
        return confirm("Are you sure you want to delete this Review?This action cannot be undone.")
    }
</script>


